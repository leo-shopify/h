{
  "name": "@leo-shopify/h",
  "version": "1.0.0-alpha.0",
  "description": "Lightweight DOM element creation. Compatible with hyperscript and JSX",
  "keywords": [],
  "author": "leo-shopify <leonardo.rojas@shopify.com>",
  "license": "MIT",
  "repository": "https://github.com/leo-shopify/h",
  "bugs": "https://github.com/leo-shopify/h/issues",
  "main": "index.js",
  "dependencies": {},
  "devDependencies": {
    "@std/esm": "^0.5.1",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "chai": "^4.1.1",
    "eslint": "^4.5.0",
    "eslint-plugin-shopify": "^17.0.0",
    "mocha": "^3.5.0"
  },
  "scripts": {
    "test": "mocha --require @std/esm",
    "eslint": "eslint src/ test/",
    "esfix": "eslint --fix src/ test/",
    "build": "babel src -d lib"
  },
  "@std/esm": {
    "esm": "js"
  },
  "eslintConfig": {
    "extends": "plugin:shopify/esnext",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "es6": false
    },
    "rules": {
      "id-length": [
        "warn",
        {
          "min": 2,
          "properties": "always",
          "exceptions": [
            "h",
            "i",
            "j"
          ]
        }
      ]
    }
  }
}
