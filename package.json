{
  "name": "@leo-shopify/h",
  "version": "1.0.0-alpha.0",
  "description": "Lightweight DOM element creation. Compatible with hyperscript and JSX",
  "keywords": [],
  "author": "leo-shopify <leonardo.rojas@shopify.com>",
  "license": "MIT",
  "repository": "https://github.com/leo-shopify/h",
  "bugs": "https://github.com/leo-shopify/h/issues",
  "main": "index.js",
  "dependencies": {},
  "devDependencies": {
    "@std/esm": "^0.5.1",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "chai": "^4.1.1",
    "eslint": "^4.5.0",
    "eslint-plugin-compat": "^1.0.4",
    "eslint-plugin-shopify": "^17.0.0",
    "mocha": "^3.5.0"
  },
  "scripts": {
    "test": "mocha --require @std/esm",
    "eslint": "eslint src/ test/",
    "esfix": "eslint --fix src/ test/",
    "build": "babel src -d lib"
  },
  "@std/esm": {
    "esm": "js"
  },
  "eslintConfig": {
    "extends": "plugin:shopify/esnext",
    "plugins": [
      "compat"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "es6": false,
      "browser": true
    },
    "rules": {
      "compat/compat": "error",
      "no-restricted-properties": [
        "error",
        {"object": "Object", "property": "assign"},
        {"object": "Object", "property": "is"},
        {"object": "Object", "property": "setPrototypeOf"},

        {"object": "Array", "property": "from"},
        {"object": "Array", "property": "of"},

        {"object": "String", "property": "fromCodePoint"},
        {"object": "String", "property": "raw"},

        {"object": "Number", "property": "isFinite"},
        {"object": "Number", "property": "isNaN"},
        {"object": "Number", "property": "isInteger"},
        {"object": "Number", "property": "isSafeInteger"},
        {"object": "Number", "property": "parseFloat"},
        {"object": "Number", "property": "parseInt"},
        {"object": "Number", "property": "EPSILON"},
        {"object": "Number", "property": "MAX_SAFE_INTEGER"},
        {"object": "Number", "property": "MIN_SAFE_INTEGER"},

        {"object": "Math", "property": "acosh"},
        {"object": "Math", "property": "asinh"},
        {"object": "Math", "property": "atanh"},
        {"object": "Math", "property": "cbrt"},
        {"object": "Math", "property": "clz32"},
        {"object": "Math", "property": "cosh"},
        {"object": "Math", "property": "expm1"},
        {"object": "Math", "property": "fround"},
        {"object": "Math", "property": "hypot"},
        {"object": "Math", "property": "imul"},
        {"object": "Math", "property": "log1p"},
        {"object": "Math", "property": "log10"},
        {"object": "Math", "property": "log2"},
        {"object": "Math", "property": "sign"},
        {"object": "Math", "property": "sinh"},
        {"object": "Math", "property": "tanh"},
        {"object": "Math", "property": "trunc"}
      ],
      "id-length": [
        "warn",
        {
          "min": 2,
          "properties": "always",
          "exceptions": [
            "h",
            "i",
            "j"
          ]
        }
      ]
    }
  },
  "browserslist": [
    "Last 2 versions",
    "> 1%",
    "Android >= 4",
    "iOS >= 9",
    "Safari >= 9",
    "IE >= 9"
  ]
}
